<h1 class="text-center">Bilderupload Hochzeit von Bibsi und Mätthy</h1>
<div class="row">
    <div class="col-xs-12 col-md-6">

        <form id="uploadForm" enctype="multipart/form-data" method="post" action="/uploaded">
            <div class="form-group">
                <label for="uploaderName">Von wem kommt das Bild (optional)</label>
                <input id="uploaderName" type="text" name="uploaderName" placeholder="Dein Name" />
            </div>
            <div class="form-group">
                <label for="userFile">Dateien auswählen</label>
                <input id="userFile" type="file" name="userFile" multiple="multiple" />
            </div>
            <button type="submit" class="btn btn-success" name="submit" id="submitUpload">
                Bilder hochladen
            </button>

        </form>
    </div>
    <div class="col-xs-12 col-md-6">
        <h3>Vorschau</h3>
        <div id="thumbnails">

        </div>
    </div>
</div>

<div class="hide multipart-support" data-multipart="<%- multipart %>"></div>
